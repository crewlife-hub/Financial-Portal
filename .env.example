# Crew Finance Portal Environment Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
PORT=3000
APP_SECRET=your-secure-app-secret-here

# =============================================================================
# QUICKBOOKS ONLINE CONFIGURATION
# =============================================================================
# OAuth2 credentials from Intuit Developer Portal
QB_CLIENT_ID=your-quickbooks-client-id
QB_CLIENT_SECRET=your-quickbooks-client-secret
QB_REDIRECT_URI=http://localhost:3000/api/auth/quickbooks/callback
QB_ENVIRONMENT=sandbox
# Company/Realm ID (obtained after OAuth connection)
QB_REALM_ID=your-realm-id
# OAuth tokens (will be managed by the app after initial auth)
QB_ACCESS_TOKEN=
QB_REFRESH_TOKEN=

# =============================================================================
# SMARTSHEET CONFIGURATION
# =============================================================================
SMARTSHEET_ACCESS_TOKEN=your-smartsheet-access-token
# Sheet IDs for placement/onboard data
SMARTSHEET_PLACEMENTS_SHEET_ID=your-placements-sheet-id
SMARTSHEET_ONBOARD_SHEET_ID=your-onboard-sheet-id

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Phase 1: json-file | Phase 2+: google-sheets | database
STORAGE_TYPE=json-file
DATA_DIR=./data

# Google Sheets (if using google-sheets storage)
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_PRIVATE_KEY=
GOOGLE_LEDGER_SHEET_ID=

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_DIR=./logs

# =============================================================================
# FEATURE FLAGS (Phased Implementation)
# =============================================================================
PHASE=1
# Phase 1: Read-only portal + ledger, no QB writes
# Phase 2: Invoice creation (approve â†’ create invoice in QB)
# Phase 3: Reconciliation sync + overdue tracking
ENABLE_QB_WRITE=false
ENABLE_RECONCILIATION=false
